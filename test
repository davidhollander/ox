#!/usr/bin/luajit

local tests = {
  'tests/fs.lua',
  'tests/tbl.lua',
  'tests/globtrie.lua',
  'tests/tcpconn.lua',
  --'tests/ox1.lua',
  --'tests/poll.lua',
  --'tests/tcp.lua',
  'tests/tcp2.lua',
  'tests/tcp3.lua',
}

for i,fname in ipairs(tests) do
  print(fname)
  print '--'
  loadfile(fname)()
  print ''
end


--[[
